{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:gridsome/recommended",
        "plugin:vue/essential",
        "plugin:vue/strongly-recommended",
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "gridsome"
    ],
    "rules": {
        "object-shorthand": ["error", "always"]
    }
}
